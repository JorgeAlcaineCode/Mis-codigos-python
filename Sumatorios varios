# Suma todos los números del 1-100.
def sumatorio100():
  result = 0
  for a in range(1,101):
    result += (a)
  print(result)
sumatorio100()
# Suma todos los números del 1-100 si son impares.
def sumatorioimpares():
  result = 0
  for a in range(1,101):
    if (a % 2 != 0):
      result += (a)
  print(result)
sumatorioimpares()
# Suma todos los números del 1-100 si son pares.
def sumatoriopares():
  result = 0
  for a in range(1,101):
    if (a % 2 == 0):
      result += (a)
  print(result)
sumatoriopares()
# Suma todos los números desde el 1 hasta el que quieras.
def sumatorioselecto():
  result = 0
  lim = int(input("¿hasta que numero quieres sumar?"))
  for a in range(1,lim+1):
    result += (a)
  print(result)
sumatorioselecto()
#Este código permite sumar hasta el número que quieras y 
#clasifica los números en pares e impares.
def sumatorio_par_impar():
  result_par = 0
  result_impar = 0
  numeroinput = int(input("¿haste que número quieres sumar?"))
  for a in range(1,numeroinput+1):
    if a%2 == 0:
      result_par += a
      print(str(a)+" Es par ")
    else:
      result_impar += a
      print(str(a)+" Es impar ")
  print("La suma de los pares es: "+str(result_par))
  print("La suma de los impares es: "+str(result_impar))
sumatorio_par_impar()
