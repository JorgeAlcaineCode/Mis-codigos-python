#Le pasas un número y te dice si es perfecto
def perfecto():
    result = int(input("¿Que numero quieres saber si es perfecto? "))
    verifica = result
    ite = 2
    lista = 1
    while (result !=ite):
        if (verifica % ite == 0):
            #print(str(ite))
            lista += ite
            print(str(ite))
            ite += 1
        else :
            ite += 1
    if (verifica == lista):
        print(str(verifica)+" es perfecto")
    else:
        print(str(verifica)+" no es perfecto")
perfecto()

