#Suma,media,mayor,menor,resta mayor y menor.
def propiedades_numeros():
    #Variable acumuladora
    suma = 0
    a = int(input("Dime un número entero"))
    suma += a
    mayor = a
    menor = a
    for cont in range(1,5):
        a = int(input("Dime un número entero"))
        suma = suma + a
        if mayor < a:
            mayor = a
        elif menor > a:
            menor = a
    print("La suma vale "+ str(suma))
    #Float convierte una variable en un número real.
    media= float(suma)/(cont+1)
    M_m= (int(mayor)-int(menor))
    print("El mayor menos el menor es: "+ str(M_m))
    print("El mayor es "+str(mayor))
    print("El menor es "+str(menor))
    print("La media vale "+str(media))

propiedades_numeros()
