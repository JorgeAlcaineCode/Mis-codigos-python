def piramide(altura):
    for i in range(altura,0,-1):
        print(" " * (altura - i) + "*" * (2 * i - 1))
piramide(4)

def cuadrado(altura):
    for i in range(altura,0,-1):
        print("*" * altura)
cuadrado(4)

def cuadrado_blanco(altura):
    for i in range(altura,0,-1):
        if (i == altura or i == 1):
            print("*" * altura)
        else:
            print ("*"+" "* (altura-2) +"*")
cuadrado_blanco(4)
